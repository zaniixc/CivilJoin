<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.civiljoin.RegisterController"
            prefWidth="800" prefHeight="350"
            style="-fx-background-color: linear-gradient(from 0% 100% to 100% 0%, #23272AFF 0%, #23272AFF 100%);">

    <Label text="CivilJoin - Register" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;" AnchorPane.topAnchor="35" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" alignment="CENTER" />

    <HBox spacing="1" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="186" AnchorPane.rightAnchor="186">
        <Label text="Username:" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" minWidth="110" />
    </HBox>

    <HBox spacing="1" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="250" AnchorPane.rightAnchor="250">
        <TextField HBox.hgrow="ALWAYS" prefHeight="30" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.8), 10, 0, 0, 0); -fx-background-color: linear-gradient(from 0% 100% to 100% 0%, #2C2F33FF 0%, #2C2F33FF 100%); -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-padding: 4 8; -fx-font-size: 12px;" />
    </HBox>

    <HBox  spacing="1" AnchorPane.topAnchor="135" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200">
        <Label text="Password:" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" minWidth="68" />
        <PasswordField HBox.hgrow="ALWAYS" prefHeight="30" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.8), 10, 0, 0, 0); -fx-background-color: linear-gradient(from 0% 100% to 100% 0%, #2C2F33FF 0%, #2C2F33FF 100%); -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-padding: 4 8; -fx-font-size: 12px;" />
    </HBox>

    <HBox  spacing="1" AnchorPane.topAnchor="180" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200">
        <Label text="Confirm Password:" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" minWidth="110" />
        <PasswordField HBox.hgrow="ALWAYS" prefHeight="30" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.8), 10, 0, 0, 0); -fx-background-color: linear-gradient(from 0% 100% to 100% 0%, #2C2F33FF 0%, #2C2F33FF 100%); -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-padding: 4 8; -fx-font-size: 12px;" />
    </HBox>

    <HBox spacing="1"   AnchorPane.topAnchor="225" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200">
        <Label text="Key:" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12px;" minWidth="32.5" />
        <TextField HBox.hgrow="ALWAYS" prefHeight="30" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.8), 10, 0, 0, 0); -fx-background-color: linear-gradient(from 0% 100% to 100% 0%, #2C2F33FF 0%, #2C2F33FF 100%); -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-padding: 4 8; -fx-font-size: 12px;" />
    </HBox>

    <HBox alignment="CENTER" AnchorPane.topAnchor="270" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150">
        <Button text="Register" prefWidth="300" prefHeight="30" style="-fx-effect: dropshadow(gaussian, rgba(255,255,255,0.1), 10, 0, 0, 0); -fx-background-color: #7289DA; -fx-text-fill: #FFFFFF; -fx-background-radius: 6; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;" />
    </HBox>

    <HBox alignment="BOTTOM_CENTER" AnchorPane.bottomAnchor="17" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Already have an account?" style="-fx-effect: dropshadow(gaussian, rgba(255,255,255,0.1), 10, 0, 0, 0); -fx-font-size: 12px; -fx-text-fill: #4A79A1; -fx-underline: true; -fx-cursor: hand;" />
    </HBox>
</AnchorPane>